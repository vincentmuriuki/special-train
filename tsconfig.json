{
  "compilerOptions": {
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "outDir": "./build",
    "sourceMap": false,
    "allowJs": true,
    "emitDecoratorMetadata": false,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitUseStrict": false,
    "baseUrl": "src/app.ts",
    "listFiles": false,
    "noEmitHelpers": false,
    "noImplicitReturns": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": false,
    "strictPropertyInitialization": false
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./build/**/*",
    "./config/databases/*",
    "./node_modules/*",
    "./node_modules"
  ]
}
